<!DOCTYPE html>
<html>
  <head>
    <title><%= siteName %> | <%= pageTitle %></title>
    <link rel="icon" href="/images/favicon.ico">
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />

    <!-- if path is set to relative it will look files at parent and current -->
    <!-- however if we change path to absolute it will only look file at the given path -->
    <link rel="stylesheet" href="/css/style.css" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=block"
      rel="stylesheet"
    />
  </head>

  <!-- Load contents of A PAGE INTO THIS layout file dynamically  -->
  <!-- include unescape html we use %- -->
  <body>
    <header>
      <div class="jumbotron d-none d-sm-block">
        <%- include(`./partials/hero.ejs`) %>
      </div>
      <!-- navs -->
      <%- include(`./partials/navigation.ejs`) %>
    </header>

    <!-- content container-->
    <!-- templates that has the local variable "template" -->
    <%- include(`../pages/${template}`) %>

    <footer class="footer">
      <%- include(`./partials/footer.ejs`) %>
    </footer>
    <!-- scripts -->
    <%- include(`./partials/scripts.ejs`) %>
  </body>
</html>
